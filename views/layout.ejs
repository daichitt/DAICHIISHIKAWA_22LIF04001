       table {
           width: 100%;
           border-collapse: collapse;
       }
       table, th, td {
           border: 1px solid #ddd;
       }
       th, td {
           padding: 8px;
           text-align: left;
       }
       th {
           background-color: #f2f2f2;
       }

      main {
           padding: 20px;
           max-width: 800px; /* Set a max width for the main content */
           margin: auto; /* Center the main content */
           margin-left: 220px; /* navの幅分だけ左にマージンを追加 */
       }
      .container {
           background-color: white;
           padding: 20px;
           margin: 20px;
           border-radius: 5px;
           /* margin-right: 100px; */

           margin: auto; /* 中央に配置 */
            border-radius: 5px;
            max-width: 1200px; /* メイン幅に合わせて設定 */
      } 
       form {
           background-color: white;
           padding: 20px;
           margin: 20px;
           border-radius: 5px;
           box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
       }
       label {
           display: block;
           margin-top: 10px;
       }
      input[type="text"],
      input[type="email"],
      input[type="password"],
      textarea,
      select {
           width: calc(100% - 22px);
           padding: 10px;
           margin-top: 5px;
           border-radius: 4px;
           border: 1px solid #ccc;
       }
       button {
           margin-top: 15px;
           padding: 10px 20px;
           background-color: #4CAF50;
           color: white;
           border: none;
           border-radius: 4px;
           cursor: pointer;
       }
       button:hover {
           background-color: #45a049;
       }
   </style>
</head>
<body>
<header>
   <h1>Web-based Email System</h1>
   <% if (typeof user !== 'undefined') { %>
       <p>Welcome, <%= user.full_name %>!</p>
       <a href="/logout" style="color:white;">Sign Out</a>
   <% } %>
</header>
<% if (typeof user !== 'undefined') { %>
<nav>
   <ul>
       <li><a href="/compose">Compose</a></li>
       <li><a href="/inbox">Inbox</a></li>
       <li><a href="/outbox">Outbox</a></li>
   </ul>
</nav>
<% } %>

